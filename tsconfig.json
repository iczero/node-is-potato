{
  "compilerOptions": {
    "target": "ES2021",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "lib": [
      "esnext"
    ],
    "outDir": "build"
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "**/*.ts"
  ]
}
